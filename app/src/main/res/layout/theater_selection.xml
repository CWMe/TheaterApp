<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
        <Button
            android:id="@+id/amc_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AMC Theater"/>

        <Button
            android:id="@+id/regal_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Regal Theater"/>
        <Button
            android:id="@+id/pavilion_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Outdoor Pailion"/>
        <Button
            android:id="@+id/amphitheater_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Amphitheater"/>

</LinearLayout>
